<%= form_for [list, list.items.new] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter To-Do item name' %>
  </div>

  <div class="form-group">
    <%= f.submit "Add", class: 'btn btn-default' %>
  </div>
<% end %>    