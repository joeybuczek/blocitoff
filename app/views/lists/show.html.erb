<div class="row">
  <div class="col-md-12">
    
    <% if @list.nil? %>
      <%= link_to "Set up your To-Do List", new_list_path, class: 'btn btn-default' %>
    <% else %>
    <h1> 
      <%= @list.title %>
      <%= link_to "Edit", edit_list_path, class: 'btn btn-default btn-list-edit' %> 
      <%= link_to "Delete", @list, method: :delete ,class: 'btn btn-default btn-list-edit', data: { confirm: 'Are you sure you want to delete this To-Do List?' } %>
    </h1> 
    
    <% end %>
    
  </div>
</div>
