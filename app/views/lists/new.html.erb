<h1>Setup To-Do List</h1>

<div class="row">
  <div class="col-md-6">
    
    <%= form_for @list do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter To-do List Title' %>
      </div>
    
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-default' %>
      </div>
    <% end %>
  
  </div>
</div>